# ==========================================
# LabelBerry Server Configuration Example
# Copy this file to .env and update values
# ==========================================

# Database Configuration
# For PostgreSQL (e.g., Neon, Supabase, local PostgreSQL)
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8080
DEBUG=false
ENABLE_DOCS=false
STATIC_VERSION=1.0

# Local mode (set to true to disable MQTT for development)
# When true, the server runs without MQTT connection
# MQTT settings are managed through the web interface and stored in database
LABELBERRY_LOCAL_MODE=false

# Next.js Frontend Configuration
# Update these URLs to match your deployment
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here_generate_with_openssl

# Node Environment
NODE_ENV=production

# Optional: External API Keys (if needed)
# EXTERNAL_API_KEY=your_api_key_here

# Optional: Email Configuration (if implementing email features)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASSWORD=your_email_password

# Optional: Monitoring (if using external monitoring services)
# SENTRY_DSN=your_sentry_dsn_here
# DATADOG_API_KEY=your_datadog_key_here