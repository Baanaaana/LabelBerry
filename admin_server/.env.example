# LabelBerry Admin Server Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
# For PostgreSQL (Neon cloud database):
DATABASE_URL="postgresql://username:password@host/database?sslmode=require"
# For local PostgreSQL:
# DATABASE_URL="postgresql://labelberry:password@localhost:5432/labelberry"

# MQTT Configuration
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USERNAME=labelberry
MQTT_PASSWORD=your_mqtt_password_here

# Server Configuration
DEBUG=false
ENABLE_DOCS=false  # Set to true for development to enable /docs endpoint
STATIC_VERSION=1.0
LOG_LEVEL=INFO

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Development Mode
LABELBERRY_LOCAL_MODE=false  # Set to true to disable MQTT for local development

# Optional: External Access URLs (for production with proxy)
# API_BASE_URL=https://labelberry.yourdomain.com/api
# FRONTEND_URL=https://labelberry.yourdomain.com